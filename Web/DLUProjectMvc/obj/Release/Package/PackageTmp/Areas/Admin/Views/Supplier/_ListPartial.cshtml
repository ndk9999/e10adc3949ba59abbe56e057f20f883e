    <thead>
        <tr class='thefilter'>
            <th>
                <input type="checkbox" name="check_all" id="check_all" title="Chọn / Bỏ chọn" rel="tooltip">
            </th>

            <th class="table-item-title">Tên</th>
            <th class="table-item-title">Email</th>
