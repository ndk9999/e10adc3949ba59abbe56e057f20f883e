                <td class="table-item-title">@item.Email</td>
                <td class="table-item-title">@item.Phone</td>
                <td class="table-item-title">@item.Address</td>
                <td class="table-item-title">@item.Description</td>

                <td class="td-actions ">
                    <div class="hidden-phone visible-desktop action-buttons">

                        @Html.EditLink(item.SupplierID)


                        @Html.DeleteLink(item.SupplierID)

                    </div>
                    <div class="hidden-md hidden-lg">
                        <div class="inline position-relative">
                            <button data-position="auto" data-toggle="dropdown" class="btn btn-minier btn-yellow dropdown-toggle">
