@model ColorLife.Core.Mvc.PagedList<DLUProject.Domain.AccountGroup>
@using ColorLife.Core.Mvc

<table class="table table-striped table-bordered table-hover dataTable no-footer"  role="grid" aria-describedby="sample-table-2_info">
    <thead>
        <tr class='thefilter'>
            <th class="center sorting_disabled" rowspan="1" colspan="1" aria-label="" style="width:30px !important">
                <label class="position-relative">
                    <input type="checkbox" name="check_all" id="check_all" title="Chọn / Bỏ chọn" class="ace">
                    <span class="lbl"></span>
                </label>

            </th>
            
            <th class="table-item-title">Name</th>


            <th class="table-item-title" style="width: 100px"><i class="fa fa-cogs"></i></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.GroupID" data-ispublish="@item.GroupID">
                <td class="with-checkbox">
                    <label class="position-relative">
                        <input type="checkbox" name="check"  class="ace check" value="@item.GroupID">
                        <span class="lbl"></span>
                    </label>

                </td>
               
                <td class="table-item-title">@item.Name</td>

                <td class="td-actions ">
                    <div class="hidden-phone visible-desktop action-buttons">
                        <a href="@Url.Action("Permission", "Permission", new { id = @item.GroupID })" title="Permission">
                            <i class="ace-icon fa fa-key bigger-130"></i>
                        </a>
                        @Html.EditLink(item.GroupID)


                        @Html.DeleteLink(item.GroupID)

                    </div>
                    <div class="hidden-md hidden-lg">
                        <div class="inline position-relative">
                            <button data-position="auto" data-toggle="dropdown" class="btn btn-minier btn-yellow dropdown-toggle">
                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">
                                <li>
                                    <a href="@Url.Action("Permission", "Permission",  new { id = @item.GroupID })" title="Permission"><i class="fa fa-key"></i></a>
                                </li>
                                <li>
                                    @Html.EditLink(item.GroupID)
                                </li>
                                <li>
                                    @Html.DeleteLink(item.GroupID)
                                </li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>



<div class="row">
    <div class="col-xs-6">
        <div class="dataTables_info" id="sample-table-2_info" role="status" aria-live="polite">
            Hiển thị @Model.StartRecordIndex đến @Model.EndRecordIndex của @Model.TotalItemCount bản tin
        </div>
    </div><div class="col-xs-6">
        <div class="dataTables_paginate paging_simple_numbers" id="sample-table-2_paginate">
            @Html.AjaxPager(
                Model, new PagerOptions()
                {
                    PageIndexParameterName = "page",
                    ShowDisabledPagerItems = false,
                    AlwaysShowFirstLastPageNumber = true
                },
                new AjaxOptions
                {
                    UpdateTargetId = "dvAjaxData",
                    LoadingElementId = "Loader"
                })
        </div>
    </div>
</div>
