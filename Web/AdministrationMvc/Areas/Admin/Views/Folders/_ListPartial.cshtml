@model ColorLife.Core.Mvc.PagedList<DLUProject.Domain.Folders>
    @using ColorLife.Core.Mvc

    <table id="Folders" class="table table-hover table-nomargin dataTable table-bordered tablesorter">
        <thead>
            <tr class='thefilter'>
                <th style="width:50px">
                    <input type="checkbox" name="check_all" id="check_all" title="Chọn / Bỏ chọn" rel="tooltip">
                </th>
             
 <th class="table-item-title">Thư mục</th>
 
 
  <th class="table-item-title">Ngày tháng</th>
 
 <th class="table-item-title">ParentID</th>
 


                <th class="table-item-title" style="width: 100px"><i class="fa fa-cogs"></i></th>
            </tr>
            
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr id="@item.FolderID" data-ispublish="@item.FolderID">
                <td class="with-checkbox">
                    <input type="checkbox" name="check" class="check" value="@item.FolderID">
                </td>
                  
 <td class="table-item-title">@item.FolderPath</td>
 
 
                <td class="table-item-title">
                    @item.DateCreated.ToString("dd/MM/yyyy")<br />
                    @item.DateModified.ToString("dd/MM/yyyy")
            </td>
 
 
 <td class="table-item-title">@item.ParentID</td>
 

                <td class="td-actions ">
                    <div class="hidden-phone visible-desktop action-buttons">

                        @Html.EditLink(item.FolderID)
						 
                        
                       @Html.DeleteLink(item.FolderID)
                         
                    </div>
                    <div class="hidden-md hidden-lg">
                        <div class="inline position-relative">
                            <button data-position="auto" data-toggle="dropdown" class="btn btn-minier btn-yellow dropdown-toggle">
                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">

                                <li>
                                    @Html.EditLink(item.FolderID)
                                </li>
                                <li>
                                    @Html.DeleteLink(item.FolderID)
                                </li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>



    <div class="row">
        <div class="col-xs-6">
            <div class="dataTables_info" id="sample-table-2_info" role="status" aria-live="polite">
                Hiển thị @Model.StartRecordIndex đến @Model.EndRecordIndex của @Model.TotalItemCount bản tin
            </div>
        </div><div class="col-xs-6">
            <div class="dataTables_paginate paging_simple_numbers" id="sample-table-2_paginate">
                @Html.AjaxPager(
                Model, new PagerOptions()
                {
                PageIndexParameterName = "page",
                ShowDisabledPagerItems = false,
                AlwaysShowFirstLastPageNumber = true
                },
                new AjaxOptions
                {
                UpdateTargetId = "dvAjaxData",
                LoadingElementId = "Loader"
                })
            </div>
        </div>
    </div>


