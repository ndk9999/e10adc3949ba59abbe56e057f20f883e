@model ColorLife.Core.Mvc.PagedList<DLUProject.Domain.Resource>
    @using ColorLife.Core.Mvc

    <table id="Resource" class="table table-hover table-nomargin dataTable table-bordered tablesorter">
        <thead>
            <tr class='thefilter'>
                <th>
                    <input type="checkbox" name="check_all" id="check_all" title="Chọn / Bỏ chọn" rel="tooltip">
                </th>
                 <th class="table-item-title">ResourceID</th>
 <th class="table-item-title">CategoryID</th>
 <th class="table-item-title">Title</th>
 <th class="table-item-title">Description</th>
 <th class="table-item-title">ResourceType</th>
 <th class="table-item-title">CreatedByID</th>
 <th class="table-item-title">DateCreated</th>
 <th class="table-item-title">ModifiedByID</th>
 <th class="table-item-title">DateModified</th>
 <th class="table-item-title">IsPublished</th>


                <th class="table-item-title" style="width: 100px"><i class="fa fa-cogs"></i></th>
            </tr>
            
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr id="@item.ResourceID" data-ispublish="@item.ResourceID">
                <td class="with-checkbox">
                    <input type="checkbox" name="check" class="check" value="@item.ResourceID">
                </td>
                   <td class="table-item-title">@item.ResourceID</td>
 <td class="table-item-title">@item.CategoryID</td>
 <td class="table-item-title">@item.Title</td>
 <td class="table-item-title">@item.Description</td>
 <td class="table-item-title">@item.ResourceType</td>
 <td class="table-item-title">@item.CreatedByID</td>
 <td class="table-item-title">@item.DateCreated</td>
 <td class="table-item-title">@item.ModifiedByID</td>
 <td class="table-item-title">@item.DateModified</td>
 <td class="table-item-title">@item.IsPublished</td>

                <td class="td-actions ">
                    <div class="hidden-phone visible-desktop action-buttons">

                        @Html.EditLink(item.ResourceID)
						 
                        
                       @Html.DeleteLink(item.ResourceID)
                         
                    </div>
                    <div class="hidden-md hidden-lg">
                        <div class="inline position-relative">
                            <button data-position="auto" data-toggle="dropdown" class="btn btn-minier btn-yellow dropdown-toggle">
                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">

                                <li>
                                    @Html.EditLink(item.ResourceID)
                                </li>
                                <li>
                                    @Html.DeleteLink(item.ResourceID)
                                </li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
            }
        </tbody>
    </table>



    <div class="row">
        <div class="col-xs-6">
            <div class="dataTables_info" id="sample-table-2_info" role="status" aria-live="polite">
                Hiển thị @Model.StartRecordIndex đến @Model.EndRecordIndex của @Model.TotalItemCount bản tin
            </div>
        </div><div class="col-xs-6">
            <div class="dataTables_paginate paging_simple_numbers" id="sample-table-2_paginate">
                @Html.AjaxPager(
                Model, new PagerOptions()
                {
                PageIndexParameterName = "page",
                ShowDisabledPagerItems = false,
                AlwaysShowFirstLastPageNumber = true
                },
                new AjaxOptions
                {
                UpdateTargetId = "dvAjaxData",
                LoadingElementId = "Loader"
                })
            </div>
        </div>
    </div>


