@model ColorLife.Core.Mvc.PagedList<DLUProject.Domain.Setting>
@using ColorLife.Core.Mvc

<table id="Setting" class="table table-hover table-nomargin dataTable table-bordered tablesorter">
    <thead>
        <tr class='thefilter'>
            <th style="width: 30px">
                <input type="checkbox" name="check_all" id="check_all" title="Chọn / Bỏ chọn" rel="tooltip">
            </th>

            <th class="table-item-title">Name</th>
            <th class="table-item-title">Value</th>


            <th class="table-item-title" style="width: 100px"><i class="fa fa-cogs"></i></th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.SettingId" data-ispublish="@item.SettingId">
                <td class="with-checkbox">
                    <input type="checkbox" name="check" class="check" value="@item.SettingId">
                </td>

                <td class="table-item-title">@item.Name</td>
                <td class="table-item-title">
                    <a href="#" class="editable" data-pk="@item.Name">
                        @item.Value
                    </a>
                   
                </td>

                <td class="td-actions ">
                    <div class="hidden-phone visible-desktop action-buttons">

                        @Html.EditLink(item.SettingId)


                        @Html.DeleteLink(item.SettingId)

                    </div>
                    <div class="hidden-md hidden-lg">
                        <div class="inline position-relative">
                            <button data-position="auto" data-toggle="dropdown" class="btn btn-minier btn-yellow dropdown-toggle">
                                <i class="ace-icon fa fa-caret-down icon-only bigger-120"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-only-icon dropdown-yellow dropdown-menu-right dropdown-caret dropdown-close">

                                <li>
                                    @Html.EditLink(item.SettingId)
                                </li>
                                <li>
                                    @Html.DeleteLink(item.SettingId)
                                </li>
                            </ul>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>



